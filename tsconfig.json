{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}